{% block chromedia_widget_choice_widget %}
{% spaceless %}
    <input type="text" {% if value is not empty %} value="{{ value }}" {% endif %} {{ block('widget_attributes') }} placeholder="Choice" >
     <a href="#" class="add-widget-choice-trigger">Add</a> |
    <a href="#" class="remove-widget-choice-trigger">Remove</a>

    {#name="chromedia_widget_choice[widget_choices][__name__]"#}
{% endspaceless %}
{% endblock %}

{% block chromedia_widget_attribute_widget %}
{% spaceless %}
    <input type="text" placeholder="Key" {{ block('widget_attributes') }}>
    <input type="text" placeholder="Value" {{ block('widget_attributes') }}>
    
    <a href="#" class="add-widget-attribute-trigger">Add</a> |
    <a href="#" class="remove-widget-attribute-trigger">Remove</a>
{% endspaceless %}
{% endblock %}

{% block chromedia_widget_choice_row %}
{% spaceless %}
    <div class="form-group">
        {{ block('chromedia_widget_choice_widget') }}
    </div>
{% endspaceless %}
{% endblock %}

{% block chromedia_widget_attribute_row %}
{% spaceless %}
    <div class="form-group">
        {{ block('chromedia_widget_attribute_widget') }}
    </div>
{% endspaceless %}
{% endblock %}

